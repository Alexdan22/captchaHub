                <div class="card-content collapse show">
                    <div class="card-body">
                        
                <%    payment.forEach(function(newPayment){    %>
                    <hr>
                    <div>
                        <div class="col-md-2 col-12 py-1 text-center">
                            <h6>Email ID</h6>
                            <p class="text-muted mb-0 font-small-3"><%=newPayment.email%></p>
                        </div>
                        <div class="col-md-2 col-12 py-1 text-center">
                            <h6>Amount</h6>
                            <p class="text-muted mb-0 font-small-3"><%=newPayment.amount%></p>
                        </div>
                        <div class="col-md-2 col-12 py-1 text-center">
                            <h6>Trnx ID</h6>
                            <p class="text-muted mb-0 font-small-3"><%=newPayment.trnxId%></p>
                        </div>
                        <div class="col-md-2 col-12 py-1 text-center">
                            <h6>Date</h6>
                            <p class="text-muted mb-0 font-small-3">
