                                    <input type="text" hidden name="approval" value="approve">
                                    <input type="number" hidden name="amount" value="<%=newPayment.amount%>">
                                    <input type="number" hidden name="trnxId" value="<%=newPayment.trnxId%>">
                                </div>
                                <div class="col-md-2 col-12 py-1 text-center">
                                    <button type="submit" class="btn-gradient-primary my-1">Approve</button>
                                </div>
                            </form>
                        </div>
                        <div class="">
                            <form class="form-horizontal form-referral-link row " action="/planActivation" method="post">
